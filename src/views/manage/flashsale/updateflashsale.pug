extends ../manageMain.pug

block styles
  link(rel="stylesheet" href="../../../../css/manage/flashsale/updateflashsale.css")

block content
  h2 Update Flash Sale

  form(method="post" class="form-horizontal")
    div(class="form-group")
      label(for="product") Product Name
      input(type="text" name="product" id="product" class="form-control" value=flashsale.itemId.name readonly)

    div(class="form-group")
      label(for="salePercent") Sale Percent
      input(type="number" name="salePercent" id="salePercent" class="form-control" value=flashsale.salePercent min="1" max="100" required)

    div(class="form-group")
      label(for="quantity") Quantity
      input(type="number" name="quantity" id="quantity" class="form-control" value=flashsale.quantity min="1" required)

    div(class="form-group")
      label(for="endDate") End Date
      input(type="date" name="endDate" id="endDate" class="form-control" value=flashsale.endDate.toISOString().slice(0,10) required)

    div(class="form-group button-group")
      button(type="submit" class="btn btn-primary") Update Flash Sale
      a(href=`/manage/flashsale`, class="btn btn-secondary") Cancel
