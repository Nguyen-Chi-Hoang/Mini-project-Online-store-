doctype html
html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/favicon.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    link(rel="stylesheet" href="/css/onlineStore/storepage.css")
    link(rel="stylesheet", href="/css/onlineStore/detailItemPage.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer")
    title Item Detail Page
  body
    header
      img(src="../../../../images/logo.jpg", alt="Store Logo" style="height: 70px; width: 100px; float: left;")
      .user-func
        a(href="../../../login").logout Signout
        a(href="#") customer info
        a(href="#" style="color: red;")= "Hello, " + login_info.username
      .cart
        a(class="fa-solid fa-cart-shopping fa-2x", href="#")
      .search-bar
        input(id="search", type="search", placeholder="Start typing to search...")

    main
      form(method="POST")
        .container
          .item-details
            .item-image
              img(src=`../../../../${item.image}`, alt=item.name)
            .item-description
              h2= item.name
              p.price $#{item.salePrice}
              p.details #{item.description}
              
              .quantity
                label(for="quantity") Quantity:
                input(id="quantity", type="number", min="1", value="1" name="quantity")

              .actions
                button(type="submit") Add to Cart
                a(href=`/user/customer/${userId}`) Back to Store

    footer.footer
      .container
        .row
          .footer-col
            h4 Company
            ul
              li: a(href="#") About
              li: a(href="#") Our Services
              li: a(href="#") Privacy Policy
              li: a(href="#") Affiliate Program
          .footer-col
            h4 Get Help
            ul
              li: a(href="#") FAQ
              li: a(href="#") Shipping
              li: a(href="#") Returns
              li: a(href="#") Order Status
              li: a(href="#") Payment Options
          .footer-col
            h4 Online Shop
            ul
              li: a(href="#") Watch
              li: a(href="#") Bag
              li: a(href="#") Shoes
              li: a(href="#") Dress
          .footer-col
            h4 Follow Us
            .social-links
              a(href="#")
                i(class="fab fa-facebook-f")
              a(href="#")
                i(class="fab fa-twitter")
              a(href="#")
                i(class="fab fa-instagram")
              a(href="#")
                i(class="fab fa-linkedin-in")
