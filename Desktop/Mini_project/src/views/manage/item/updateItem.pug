extends ../manageMain.pug

block styles
  link(rel="stylesheet" href="/css/manage/item/updateItem.css")

block content
  h2 Add New Product

  form(method="POST", enctype="multipart/form-data", class="form-container")
    .form-group
      label(for="name") Product Name:
      input(type="text", id="name", name="name", value=item.name, required)

    .form-group
      label(for="description") Description:
      textarea(id="description", name="description", rows="4", required)= item.description

    .form-group
      label(for="purchasePrice") Purchase Price:
      input(type="number", id="purchasePrice", name="purchasePrice", step="0.01", value=item.purchasePrice, required)

    .form-group
      label(for="weight") Weight (kg):
      input(type="number", id="weight", name="weight", step="0.01", value=item.weight, required)

    .form-group
      label(for="image") Image:
      input(type="file", id="image", name="image")

    .form-group
      label(for="category_type") Category:
      select(id="category_type", name="category_type", required)
        option(value= "") -- Select a category --
        each category in categories
          option(value=category.category_name)= category.category_name

    .form-group
      button(type="submit") Add Product

  p
    a(href="/items") Back to Product List
