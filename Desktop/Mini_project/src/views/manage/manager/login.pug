doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Login - Website Quản Lý Bán Hàng
    link(rel="stylesheet" href="../../css/manage/login_signup.css")
  body
    .container
      h2 Login
      form(action="/login", method="post", class="form-container")
        .form-group
          label(for="username") Username
          input(type="text", id="username", name="username", required=true, placeholder="Enter your username")
        .form-group
          label(for="password") Password
          input(type="password", id="password", name="password", required=true, placeholder="Enter your password")
        button(type="submit") Login
      p Not a member? 
        a(href="/manage/signup") Sign Up